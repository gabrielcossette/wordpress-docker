 	done
+
+echo "Setup msmtp"
+
+file_env 'EMAIL_PW'
+
+sed -i "s/host           SMTP/host           $EMAIL_SERVER/" /etc/msmtprc
+sed -i "s/port           PORT/port           $EMAIL_PORT/" /etc/msmtprc
+sed -i "s/from           FROM/from           $EMAIL_FROM/" /etc/msmtprc
+sed -i "s/user           USER/user           $EMAIL_USER/" /etc/msmtprc
+sed -i "s/password       PW/password       $EMAIL_PW/" /etc/msmtprc
